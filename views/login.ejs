<%- include('partials/header', { title: 'LOGIN' }) %>

<div class="min-h-screen grid grid-cols-1 md:grid-cols-[2fr_3fr]">

    <!-- Left section -->
    <%- include('partials/leftSectionHome') %>
    <!-- Right section -->
    <div class="flex items-center justify-center bg-teal-700">
        <div class="w-full max-w-md bg-white rounded-xl shadow-xl p-8">

            <h2 class="text-2xl font-semibold text-center text-gray-800">
                Welcome Back
            </h2>

            <form class="mt-6 space-y-4" method="POST" action="/login">

                <input
                    type="email"
                    name="email"
                    placeholder="Email"
                    required
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500"
                />

                <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500"
                />

                <button
                    type="submit"
                    class="w-full bg-orange-500 hover:bg-orange-600 text-white py-2 rounded-md font-medium transition"
                >
                    Log In
                </button>

            </form>

            <!-- Error message area -->
            <%- include('partials/errorMessage') %>

            <!-- Success message area -->
            <%- include('partials/successMessage') %>
            
            <p class="mt-4 text-center text-sm text-gray-600">
                Donâ€™t have an account?
                <a href="/register" class="text-teal-700 font-medium hover:underline">
                    Sign Up
                </a>
            </p>

        </div>
    </div>

</div>

<%- include('partials/footer') %>
